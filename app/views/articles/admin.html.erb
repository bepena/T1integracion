
<h1>Administrador</h1>

<table>
  <tr>
    <th>Titulo</th>
    <th>Texto</th>
  </tr>
  <% @articles = Article.all %>
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Mostrar', article_path(article) %></td>
      <td><%= link_to 'Editar', edit_article_path(article) %> </td>
      <td><%= link_to 'Borrar', article_path(article), method: :delete,
      data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
</table>
<br>
<%= link_to 'Nueva Noticia', new_article_path %>
